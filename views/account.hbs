{{#if errorOcurred}}
<p>Internal server error, try again later!</p>
{{else}}
{{#if account}}

<section class="hero is-success">
	<div class="hero-body">
		<p class="title">
			{{account.username}}
		</p>
	</div>
</section>

<div>
	{{#each playlists as |playlist playlistID|}}
	<div class="column is-3">
		<a href="/playlists/{{id}}/songs">
			<div class="card" style="background-color: black;">
				<header class="card-header" style="color:white">
					<div class="media">
						<div class="media-left">
							<figure class="image is-48x48">
								<img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
							</figure>
						</div>
						<div class="media-content">
							<p class="title is-4">{{playlist.name}}</p>
						</div>
					</div>
				</header>
			</div>
		</a>
	</div>
	{{/each}}
</div>

{{else}}
<p>There are no accounts.</p>
{{/if}}

{{/if}}